<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zettelkasten.MainPage">
    <VerticalStackLayout Padding="20">

        <!-- タグ入力と追加ボタン -->
        <HorizontalStackLayout>
            <Entry Placeholder="タグを入力" Text="{Binding NewTag}" WidthRequest="200" />
            <Button Text="追加" Command="{Binding AddTagCommand}" />
        </HorizontalStackLayout>

        <!-- タグリスト -->
        <CollectionView ItemsSource="{Binding AvailableTags}" HeightRequest="50">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="5" Margin="5" BackgroundColor="LightGray">
                        <Label Text="{Binding .}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- メモ入力エリア -->
        <Editor Placeholder="メモを入力" Text="{Binding Memo}" HeightRequest="100" />

        <Button Text="保存" Command="{Binding SaveCardCommand}" />

        <!-- 単語カードリスト（ドラッグ＆ドロップ対応） -->
        <CollectionView ItemsSource="{Binding WordCards}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="LightBlue">
                        <VerticalStackLayout>
                            <Label Text="{Binding Memo}" FontSize="Medium" />
                            <Label Text="{Binding Tags}" FontSize="Small" TextColor="Gray" />
                        </VerticalStackLayout>
                        <Frame.GestureRecognizers>
                            <DragGestureRecognizer CanDrag="True" DragStarting="OnDragStarting" />
                            <DropGestureRecognizer Drop="OnDrop" AllowDrop="True" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
